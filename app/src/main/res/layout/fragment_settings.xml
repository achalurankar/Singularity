<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsFragment">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!--Form-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!--            Header-->
            <TextView
                android:id="@+id/header_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="Your Credentials"
                android:textColor="@color/task_adder_tv_color"
                android:textSize="18sp" />

            <!--            title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_text_views_padding"
                android:text="Username"
                android:textColor="@color/task_adder_tv_color"
                android:textSize="@dimen/form_text_views_size" />

            <!--          edit text-->
            <EditText
                android:id="@+id/username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_et_bg"
                android:fontFamily="@font/bubblegum_sans"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/task_adder_value"
                android:textSize="15sp" />

            <!--            title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_text_views_padding"
                android:text="Password"
                android:textColor="@color/task_adder_tv_color"
                android:textSize="@dimen/form_text_views_size" />

            <!--          edit text-->
            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_et_bg"
                android:fontFamily="@font/bubblegum_sans"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/task_adder_value"
                android:textSize="15sp" />

            <!--            title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_text_views_padding"
                android:text="Client Id"
                android:textColor="@color/task_adder_tv_color"
                android:textSize="@dimen/form_text_views_size" />

            <!--          edit text-->
            <EditText
                android:id="@+id/client_id_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_et_bg"
                android:fontFamily="@font/bubblegum_sans"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/task_adder_value"
                android:textSize="15sp" />

            <!--            title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_text_views_padding"
                android:text="Client Key"
                android:textColor="@color/task_adder_tv_color"
                android:textSize="@dimen/form_text_views_size" />

            <!--          edit text-->
            <EditText
                android:id="@+id/client_key_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_et_bg"
                android:fontFamily="@font/bubblegum_sans"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/task_adder_value"
                android:textSize="15sp" />

            <!--            title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_text_views_padding"
                android:text="Security Token"
                android:textColor="@color/task_adder_tv_color"
                android:textSize="@dimen/form_text_views_size" />

            <!--          edit text-->
            <EditText
                android:id="@+id/security_token_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_et_bg"
                android:fontFamily="@font/bubblegum_sans"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/task_adder_value"
                android:textSize="15sp" />

            <!--            save btn-->
            <RelativeLayout
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/save_btn_bg"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="save"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>