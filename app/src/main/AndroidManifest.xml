<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.singularity">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".controller.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Singularity.Dark">
        <activity android:name=".activity.TaskList"/>
        <activity android:name=".activity.TaskEditor" />
        <activity android:name=".activity.Groups" />
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.Foreground"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.singularity.service.Notification" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>